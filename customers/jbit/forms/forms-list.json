{
  "forms": [
    {
      "id": "jbit-contact-form",
      "url": "https://jbit.be/contact-nl/",
      "purpose": "Contact form for JBIT services inquiry",
      "language": "nl",
      "type": "contact",
      "fields": [
        {
          "name": "name",
          "type": "text",
          "label": "Naam",
          "required": false,
          "selector": "input[name='form_fields[name]'], #form-field-name",
          "validation": "optional"
        },
        {
          "name": "email",
          "type": "email",
          "label": "Email",
          "required": true,
          "selector": "input[name='form_fields[email]'], #form-field-email",
          "validation": "required,email"
        },
        {
          "name": "phone",
          "type": "tel",
          "label": "Telefoon",
          "required": false,
          "selector": "input[name='form_fields[phone]'], #form-field-phone",
          "validation": "optional"
        },
        {
          "name": "interesse",
          "type": "checkbox",
          "label": "Interesse",
          "required": false,
          "selector": "input[name='form_fields[field_a3f7052][]']",
          "options": [
            "Process Integratie en Automatisatie",
            "Advies op maat",
            "Webdesign",
            "Gepersonaliseerde Webhosting"
          ],
          "validation": "optional"
        },
        {
          "name": "message",
          "type": "textarea",
          "label": "Bericht",
          "required": false,
          "selector": "textarea[name='form_fields[message]'], #form-field-message",
          "validation": "optional"
        }
      ],
      "submit_button": {
        "selector": "button.elementor-button[type='submit'], button:has-text('Send')",
        "text": "Send"
      },
      "messages": {
        "success": {
          "selector": ".elementor-message-success, .success-message, .form-success, .elementor-form .elementor-message",
          "expected_text": "Bedankt voor uw bericht"
        },
        "error": {
          "selector": ".elementor-message-danger, .error-message, .form-error, .elementor-form .elementor-message",
          "expected_text": "Er is een fout opgetreden"
        },
        "field_errors": {
          "selector": ".elementor-field-error, .field-error, .error, .elementor-field-required"
        }
      },
      "security_features": {
        "captcha": false,
        "honeypot": false,
        "csrf_token": true,
        "rate_limiting": true
      },
      "submission": {
        "method": "POST",
        "ajax": true,
        "endpoint": "https://jbit.be/wp-admin/admin-ajax.php",
        "action": "elementor_pro_forms"
      },
      "special_features": {
        "multi_step": false,
        "conditional_logic": false,
        "file_upload": false,
        "progress_bar": false
      }
    }
  ]
}