# CI/CD Environment Configuration for JBIT Form Testing
# This file contains environment variables for CI/CD pipelines

# Customer Configuration
CUSTOMER=jbit

# Playwright Configuration
CI=true
HEADLESS=true
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Test Configuration
TIMEOUT=60000
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# Retry Configuration
RETRIES=2
WORKERS=1

# Output Configuration
OUTPUT_DIR=customers/jbit/reports
ARTIFACTS_DIR=customers/jbit/reports/test-artifacts

# reCAPTCHA Configuration (for testing environments)
# Note: These should be set in CI/CD secrets for security
RECAPTCHA_BYPASS_ENABLED=true
RECAPTCHA_TEST_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI

# Email Notification Settings (GitHub Secrets)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@domain.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=alerts@jbit.com
# FROM_EMAIL=noreply@jbit.com

# Slack Notification Settings (GitHub Secrets)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Teams Notification Settings (GitHub Secrets)
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your/webhook/url

# Custom Webhook Settings (GitHub Secrets)
# CUSTOM_WEBHOOK_URL=https://your-api.com/webhook

# PagerDuty Settings (GitHub Secrets)
# PAGERDUTY_INTEGRATION_KEY=your-integration-key

# Report Server Configuration
REPORT_SERVER_PORT=8080
REPORT_SERVER_HOST=0.0.0.0

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=4096