# Environment variables for JBIT Form Testing
# Copy this file to .env and update the values as needed

# Base URLs
JBIT_BASE_URL=https://jbit.be
JBIT_CONTACT_FORM_URL=https://jbit.be/contact-nl/

# Test Configuration
TEST_TIMEOUT=30000
RETRY_COUNT=2
HEADLESS_MODE=true

# Browser Configuration
DEFAULT_BROWSER=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Data Configuration
USE_REAL_EMAIL=false
TEST_EMAIL_DOMAIN=example.com

# Reporting
GENERATE_REPORT=true
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# Debug Settings
DEBUG_MODE=false
SLOW_MO=0

# Optional: Custom selectors (if default ones fail)
# CUSTOM_NAME_SELECTOR=
# CUSTOM_EMAIL_SELECTOR=
# CUSTOM_PHONE_SELECTOR=
# CUSTOM_MESSAGE_SELECTOR=
# CUSTOM_SUBMIT_SELECTOR=